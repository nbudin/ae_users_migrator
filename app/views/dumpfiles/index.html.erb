<%= form_for :login, :url => login_path do |f| %>
  <table>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "Log in" %></td>
    </tr>
  </table>
<% end -%>